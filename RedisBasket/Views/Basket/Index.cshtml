@model BasketViewModel

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
	<h4>Basket</h4>
	<hr />
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.AddProduct.ProductId)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.AddProduct.ProductName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.AddProduct.Quantity)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.AddProduct.Price)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Basket.BasketPosition)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.ProductId)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ProductName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Quantity)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
				</tr>
			}
		</tbody>
	</table>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form asp-action="AddBasketPosition">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="AddProduct.ProductId" class="control-label"></label>
					<input asp-for="AddProduct.ProductId" class="form-control" />
					<span asp-validation-for="AddProduct.ProductId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="AddProduct.ProductName" class="control-label"></label>
					<input asp-for="AddProduct.ProductName" class="form-control" />
					<span asp-validation-for="AddProduct.ProductName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="AddProduct.Quantity" class="control-label"></label>
					<input asp-for="AddProduct.Quantity" class="form-control" />
					<span asp-validation-for="AddProduct.Quantity" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="AddProduct.Price" class="control-label"></label>
					<input asp-for="AddProduct.Price" class="form-control" />
					<span asp-validation-for="AddProduct.Price" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Basket.SessionId)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Basket.SessionId)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Basket.CheckoutPrice)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Basket.CheckoutPrice)
		</dd>
	</dl>
</div>
<div>
	@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
	<a asp-action="Index">Back to List</a>
</div>
